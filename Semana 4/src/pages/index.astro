import { state, generateId } from "../state.js";

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const taskId = formData.get("task-id");
  const newTask = formData.get("new-task");
  const taskButton = formData.get("task-btn");
  const deleteButton = formData.get("delete-btn");
  const clearCompleted = formData.get("clear-completed");

  if (newTask && typeof newTask === "string") {
    state.tasks.push({
      id: generateId(),
      text: newTask,
      done: false
    });
  }

  if (taskButton && typeof taskId === "string") {
    const task = state.tasks.find(t => t.id === taskId);
    if (task) {
      task.done = !task.done;
    }
  }

  if (deleteButton && typeof taskId === "string") {
    state.tasks = state.tasks.filter(t => t.id !== taskId);
  }

  if (clearCompleted) {
    state.tasks = state.tasks.filter(t => !t.done);
  }
}
