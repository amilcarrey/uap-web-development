import Layout from "../layouts/Layout.astro";
import { state, generateId } from "../state";

// import { addTask } from "../components/Task.ts";

let taskList: string[] = [];

if (Astro.request.method === "POST") {
	try {
    	const formdata = await Astro.request.formData();
    	const taskText = formdata.get("task")?.toString().trim();
		const taskId = formdata.get("task-id")?.toString();
		const taskButton = formdata.get("task-btn")?.toString();
		const deleteButton = formdata.get("delete-btn")?.toString();
		const clearCompleted = formdata.get("clear-completed")?.toString();
    
		if (taskText) {
			state.tasks.push({id: generateId(), text: taskText, done: false});
		}
		// else {  
		// 	return alert("Please enter a task.");
  		// }

		if (taskButton) {
			const task = state.tasks.find(t => t.id === taskId);
			if (task) {
				task.done = !task.done;
			}
		}

		if (deleteButton) {
			const taskIndex = state.tasks.findIndex(t => t.id === taskId);
			if (taskIndex > -1) {
				taskList.splice(taskIndex, 1);
			}
		}

		if (clearCompleted) {
			taskList = taskList.filter(task => task !== "‚úÖ");
		}
	}
	catch (error) {
		console.error("Error processing form data:", error);
	}
}
