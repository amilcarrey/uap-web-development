---
import { listarTareas } from "../lib/tasks";
import Title from "./Title.astro";
import CategoryButtons from "./CategoryButtons.astro";
import TaskInput from "./TaskInput.astro";
import Filters from "./Filters.astro";
import TaskList from "./TaskList.astro";

const { filtro } = Astro.props;
const filteredTasks = listarTareas(filtro ?? undefined);
---

<Title title1="TO" title2="DO" />
<CategoryButtons />
<TaskInput />
<Filters />
<TaskList tasks={filteredTasks} />
