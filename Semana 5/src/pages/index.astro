import Layout from '../layouts/Layout.astro'; // Importa el layout que se usar√° para la p√°gina
import { tasks } from "../lib/tasks.ts"; // Importa la lista de tareas desde el archivo tareas.ts

//const todasLasTareas = Astro.locals.tareas ?? [];
const allTasks = tasks ?? [];
// Se obtiene el filtro de la URL, por defecto es "todas"
const filter = Astro.url.searchParams.get("filter") ?? "all";

// Se filtran las tareas seg√∫n el filtro seleccionado
let filteredTasks = allTasks
  .map((t, index) => ({ ...t, id: index })); // a√±ade √≠ndice original

if (filter === "completed") { // Filtra las tareas completadas
  filteredTasks = filteredTasks.filter(t => t.done);
} else if (filter === "incomplete") { // Filtra las tareas incompletas
  filteredTasks = filteredTasks.filter(t => !t.done); //
}

