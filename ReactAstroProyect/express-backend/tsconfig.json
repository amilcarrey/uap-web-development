{
  "compilerOptions": {
    "target": "ESNext", // Cambiado para soportar ES Modules
    "module": "ESNext", // Cambiado para usar ES Modules
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node", // Resolución de módulos para Node.js
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}