// SERVER SIDE:
interface Tarea {
  id: number;
  nombre: string;
  completada: boolean;
}

// Get tasks from session storage or initialize with default tasks
let tareas: Tarea[] = [];
if (!Astro.cookies.has('tareas')) {
  tareas = [
    { id: 1, nombre: "Tarea de prueba 1", completada: false },
    { id: 2, nombre: "Tarea de prueba 2", completada: true }
  ];
  Astro.cookies.set('tareas', JSON.stringify(tareas));
} else {
  tareas = JSON.parse(Astro.cookies.get('tareas')!.value);
}

// Process form actions
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();

    if (data.has("nueva-tarea")) {
      const nombreTarea = data.get("nueva-tarea")?.toString().trim();
      if (nombreTarea) {
        tareas.push({
          id: Date.now(),
          nombre: nombreTarea,
          completada: false,
        });
      }
    } else if (data.has("toggle-tarea")) {
      const tareaId = parseInt(data.get("toggle-tarea")?.toString() || "0");
      tareas = tareas.map(t => 
        t.id === tareaId ? {...t, completada: !t.completada} : t
      );
    } else if (data.has("eliminar-tarea")) {
      const tareaId = parseInt(data.get("eliminar-tarea")?.toString() || "0");
      tareas = tareas.filter(t => t.id !== tareaId);
    } else if (data.has("eliminar-completadas")) {
      tareas = tareas.filter(t => !t.completada);
    }

    // Save updated tasks and redirect
    Astro.cookies.set('tareas', JSON.stringify(tareas));
    return Astro.redirect(`/todo?filtro=${Astro.url.searchParams.get("filtro") || "todas"}`);
  } catch (error) {
    console.error("Error processing form:", error);
  }
}

// Filtrar tareas
const filtro = Astro.url.searchParams.get("filtro") || "todas";
let tareasFiltradas = tareas;
if (filtro === "completadas") {
  tareasFiltradas = tareas.filter((t) => t.completada);
} else if (filtro === "incompletas") {
  tareasFiltradas = tareas.filter((t) => !t.completada);
}
