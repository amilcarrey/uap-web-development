<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO</title>
  </head>
  <body>
    <div class="container">
      <h1>TO-DO | Kevin Stivala</h1>

      <!-- Formulario para nueva tarea -->
      <form method="POST">
        <input
          type="text"
          name="nueva-tarea"
          placeholder="Introduce una tarea"
          required
        />
        <button type="submit">Añadir</button>
      </form>

      <!-- Lista de tareas -->
      <ul id="lista-tareas">
        {
          tareasFiltradas.map((tarea) => (
            <li>
              <form method="POST" style="display: inline;">
                <input type="hidden" name="toggle-tarea" value={tarea.id} />
                <input
                  type="checkbox"
                  checked={tarea.completada}
                  onchange="this.form.submit()"
                />
                <span
                  style={
                    tarea.completada ? "text-decoration: line-through" : ""
                  }
                >
                  {tarea.nombre}
                </span>
              </form>

              <form method="POST" style="display: inline;">
                <input type="hidden" name="eliminar-tarea" value={tarea.id} />
                <button type="submit">×</button>
              </form>
            </li>
          ))
        }
      </ul>

      <!-- Filtros y acciones -->
      <div>
        <form method="POST" style="display: inline;">
            <button type="submit" name="eliminar-completadas" value="true">
              Eliminar Completadas
            </button>
          </form>

        <a href="?filtro=todas">
          <button type="button">Todas</button>
        </a>
        <a href="?filtro=incompletas">
          <button type="button">Incompletas</button>
        </a>
        <a href="?filtro=completadas">
          <button type="button">Completadas</button>
        </a>
      </div>
    </div>
  </body>
</html>

