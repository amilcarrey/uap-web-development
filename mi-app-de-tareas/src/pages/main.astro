---
import Layout from '../layouts/Layout.astro';
export const prerender = false;

const globalState = globalThis.globalState || { tareas: [], filtroActual: 'todas' };
globalThis.globalState = globalState; 

let { tareas, filtroActual } = globalState;

if (Astro.request.method === 'POST') {
  const data = await Astro.request.formData();
  const accion = data.get('accion');
  const texto = data.get('texto');
  const index = Number(data.get('index'));
  const filtro = data.get('filtro');

  switch (accion) {
    case 'agregar':
      if (texto?.trim()) {
        tareas.push({ texto: texto.trim(), completada: false });
      }
      break;

    case 'completar':
      if (!isNaN(index) && tareas[index]) {
        tareas[index].completada = !tareas[index].completada;
      }
      break;

    case 'eliminar':
      if (!isNaN(index)) {
        tareas.splice(index, 1);
      }
      break;

    case 'limpiar-completadas':
      tareas = tareas.filter(t => !t.completada);
      break;

    case 'filtrar':
      if (['todas', 'activas', 'completadas'].includes(filtro)) {
        globalState.filtroActual = filtro;
      }
      break;
  }
}

// Aplicar filtro sin eliminar tareas
let tareasFiltradas = tareas;
if (globalState.filtroActual === 'activas') {
  tareasFiltradas = tareas.filter(t => !t.completada);
} else if (globalState.filtroActual === 'completadas') {
  tareasFiltradas = tareas.filter(t => t.completada);
}

---

  <header>
    <h1>2.DO</h1>
    <form method="POST" class="tabs">
      <input type="hidden" name="accion" value="filtrar" />
      <button class="tab {globalState.filtroActual === 'todas' ? 'active' : ''}" type="submit" name="filtro" value="todas">Todas</button>
      <button class="tab {globalState.filtroActual === 'activas' ? 'active' : ''}" type="submit" name="filtro" value="activas">Incompletas</button>
      <button class="tab {globalState.filtroActual === 'completadas' ? 'active' : ''}" type="submit" name="filtro" value="completadas">Completas</button>
    </form>
  </header>

<main>
    <div class="tareas">
      <!-- Formulario para a√±adir -->
      <form method="POST">
        <input type="hidden" name="accion" value="agregar" />
        <input type="text" id="a√±adir" name="texto" placeholder="¬øQu√© necesitas hacer?" required />
        <button type="submit" id="a√±adir-boton">A√±adir</button>
      </form>
      <br /><br />

      <!-- Lista de tareas -->
      <div id="formulario-tareas">
        {tareasFiltradas.map((tarea, index) => (
          <div class="contenedor-tarea">
            <!-- Completar tarea -->
            <form method="POST">
              <input type="hidden" name="accion" value="completar" />
              <input type="hidden" name="index" value={index} />
              <button type="submit" class="check">
                {tarea.completada ? "‚úÖ" : "‚≠ï"}
              </button>
            </form>

            <!-- Tarea -->
            <p class={tarea.completada ? "completada" : ""}>{tarea.texto}</p>

            <!-- Eliminar tarea -->
            <form method="POST">
              <input type="hidden" name="accion" value="eliminar" />
              <input type="hidden" name="index" value={index} />
              <button type="submit" class="eliminar">üóëÔ∏è</button>
            </form>
          </div>
        ))}

        <!-- Eliminar todas las completadas -->
        <form method="POST">
          <input type="hidden" name="accion" value="limpiar-completadas" />
          <button type="submit" id="clear">Eliminar Tareas Completadas</button>
        </form>
      </div>
    </div>
</main>

