---
// Importar layout y controladores
import Layout from "../layouts/Layout.astro";
import { getTasks } from "../controllers/getTasks.js";
import { addTask } from "../controllers/addTask.js";
import { updateTask } from "../controllers/updateTask.js";
import { deleteTask } from "../controllers/deleteTask.js";
import { clearCompleted } from "../controllers/clearCompleted.js";
import { state } from "../state.js";

// Manejo de solicitudes POST
if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();

  const done = formData.get("done");
  const undone = formData.get("undone");
  const all = formData.get("all");

  if (done) {
    state.filter = "done";
  } else if (undone) {
    state.filter = "undone";
  } else if (all) {
    state.filter = "all";
  }

  const taskText = formData.get("taskInput");
  const completeTask = formData.get("completeTask");
  const deleteTaskId = formData.get("deleteTask");
  const clear = formData.get("clearCompleted");

  if (taskText) {
    addTask(taskText);
  } else if (completeTask) {
    updateTask(completeTask);
  } else if (deleteTaskId) {
    deleteTask(deleteTaskId);
  } else if (clear) {
    clearCompleted();
  }

  return Astro.redirect("/");
}

// Obtener tareas seg√∫n el filtro actual
const tasks = getTasks(state.filter);
---
<Layout>
  <head>
    <title>Gestor de tareas</title>
  </head>
  <body>
    <main class="principal">
      <header class="encabezado">
        <div class="top">
          <h1 class="titulo">Gestor de tareas</h1>
        </div>
      </header>

      <nav class="navEncabezado">
        <div class="personal"><h3>Personal</h3></div>
        <div class="profesional"><h3>Profesional</h3></div>
      </nav>

      <!-- Formulario para agregar tarea -->
      <div class="agregar">
        <form method="post">
          <input type="text" name="taskInput" placeholder="Qu√© necesitas hacer?" required>
          <button type="submit" class="agg" name="addTask" value="true">AGREGAR</button>
        </form>
      </div>

      <!-- Lista de tareas -->
      <div class="lista">
        <ul id="checklist">
          {tasks.map(task => (
            <li>
              <div class="tarea">
                <form method="POST">
                  <button type="submit" name="completeTask" value={task.id} class="icono">
                    {task.completed ? "‚úÖ" : "‚¨úÔ∏è"}
                  </button>
                </form>
                <span class={task.completed ? "completado" : ""}>
                  {task.text}
                </span>
                <form method="POST">
                  <button type="submit" name="deleteTask" value={task.id} class="icono">üóëÔ∏è</button>
                </form>
              </div>
            </li>
          ))}
        </ul>
      </div>

      <!-- Bot√≥n limpiar completadas -->
      <div class="clear">
        <form method="POST">
          <button type="submit" name="clearCompleted" value="true" class="limpiar">Limpiar</button>
        </form>
      </div>

      <!-- Filtros de tareas -->
      <div class="botones">
        <form method="POST">
          <button type="submit" name="all" value="true" class="todo">Todas</button>
          <button type="submit" name="done" value="true" class="completado">Completas</button>
          <button type="submit" name="undone" value="true" class="incompleto">Incompletas</button>
        </form>
      </div>
    </main>
  </body>
</Layout>

