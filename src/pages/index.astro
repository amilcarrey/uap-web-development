---
import BaseLayout from '../layouts/Layout.astro';
export const prerender = false;

let filtro = Astro.url.searchParams.get('filter') || 'all';

async function cargarTareas(filtro = 'all') {
  const response = await fetch(`http://localhost:4321/api/tareas/getFiltered?filter=${filtro}`);
  const tareas = await response.json();
  return tareas;
}

if (Astro.request.method === 'POST') {
  const datos = await Astro.request.formData();
  const accion = datos.get('_action');
  if (accion) {
    await fetch(`http://localhost:4321/api/tareas/${accion}`, {
      method: 'POST',
      body: datos
    });
  }
  return Astro.redirect(Astro.url.pathname + `?filter=${filtro}`);
}

let tareas = await cargarTareas(filtro);
