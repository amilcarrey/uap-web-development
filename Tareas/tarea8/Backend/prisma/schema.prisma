// This file defines your database models for Prisma and SQLite

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Simple example of a user model
model User {
  id          Int         @id @default(autoincrement())
  firstName   String
  lastName    String
  username    String      @unique
  password    String
  boards      Board[]     // 1:N relationship
  permissions Permission[]
  preference  Preference?
}

model Board {
  id           Int      @id @default(autoincrement())
  name         String
  owner        User     @relation(fields: [ownerId], references: [id])
  ownerId      Int
  tasks        Task[]   // 1:N relationship
  permissions  Permission[]
}

model Permission {
  id      Int    @id @default(autoincrement())
  userId  Int
  boardId Int
  level   PermissionLevel

  user   User  @relation(fields: [userId], references: [id])
  board  Board @relation(fields: [boardId], references: [id])

  @@unique([userId, boardId])
}

enum PermissionLevel {
  OWNER
  EDITOR
  VIEWER
}

model Preference {
  id                   Int      @id @default(autoincrement())
  user                 User     @relation(fields: [userId], references: [id])
  userId               Int      @unique
  itemsPerPage         Int
  updateInterval       Int
  upperCase            Boolean
}

model Task {
  id        Int     @id @default(autoincrement())
  board     Board   @relation(fields: [boardId], references: [id])
  boardId   Int
  content   String
  active    Boolean
}