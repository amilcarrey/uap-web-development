{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/api/lib/*"],
      "@shared/*": ["src/lib/*"],
      "@components/*": ["src/components/*"],
      "@api/*": ["src/api/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [".astro/types.d.ts", "**/*", "src/**/*"],
  "exclude": ["dist", "node_modules"]
}


